<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Switch
        android:id="@+id/frontDoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:text="Front Door" />

    <Switch
        android:id="@+id/sideDoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/frontDoor"
        android:layout_below="@+id/frontDoor"
        android:layout_marginTop="20dp"
        android:text="Side Door" />

    <Switch
        android:id="@+id/backDoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sideDoor"
        android:layout_below="@+id/sideDoor"
        android:layout_marginTop="21dp"
        android:text="Back Door" />
</RelativeLayout>